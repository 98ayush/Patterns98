#include <stdio.h>

int main()
{
    int i,j,k,n;
    scanf("%d",&n);
    for(i=0;i<n/2;i++)
    {
        for(j=n/2;j>i;j--)
        {
            printf(" ");
        }
        for(j=0;j<=i;j++)
        {
            printf("*");
        }
        printf("\n");
    }
    for(i=1;i<=1;i++)
    {
        for(j=1;j<=n/2+1;j++)
        {
            printf("*");
        }
        for(j=1;j<=n;j++)
        {
            printf("@");
        }
    }
    
    printf("\n");
    for(i=0;i<n/2;i++)
    {
        for(j=0;j<=i;j++)
        {
            printf(" ");
        }
        for(j=n/2;j>i;j--)
        {
            printf("*");
        }
        for(j=1;j<n;j++)
        {
            printf(" ");
        }
        printf("@");
        printf("\n");
    }
    for(i=0;i<n/2;i++)
    {
        for(j=0;j<n+n/2;j++)
        {
           printf(" "); 
        }
        printf("@");
        printf("\n");
    }
    for(i=n/2;i>=0;i--)
    {
    for(j=0;j<n+n/2;j++)
    {
        printf(" ");
    }
    for(j=n/2;j>i;j--)
    {
        printf(" ");
    }
    for(j=2*i;j>=0;j--)
    {
        printf("*");
    }
    printf("\n");
    }
    for(i=1;i<=n/2;i++)
    {
        for(j=0;j<n/2+n;j++)
        {
            printf(" ");
        }
        for(j=n/2;j>i;j--)
        {
            printf(" ");
        }
        for(j=1;j<=2*i+1;j++)
        {
            printf("*");
           
        }
         j++;
        printf("\n");
    }
    for(i=0;i<n-1;i++)
    {
        for(j=1;j<2*n+n/2;j++)
        {
            printf(" ");
        }
        printf("@");
        for(j=1;j<=n-1;j++)
        {
            printf(" ");
        }
        if(i>=n/2)
        {
            for(k=0;k<n/2;k++)
            {
                if(k+n/2==i||k+n/2<i)
                {
                printf("*");
                }
            }
        }
        printf("\n");
    }
    for(i=1;i<=1;i++)
    {
        for(j=1;j<2*n+n/2;j++)
        {
            printf(" ");
        }
        for(j=1;j<=n;j++)
        {
            printf("@");
        }
        for(j=1;j<=n/2+1;j++)
        {
            printf("*");
        }
    }
    printf("\n");
    for(i=1;i<=n/2;i++)
    {
        for(j=1;j<3*n+n/2;j++)
        {
            printf(" ");
        }
        for(k=n/2;k>=i;k--)
        {
            printf("*");
        }
        printf("\n");
    }

    return 0;
}
