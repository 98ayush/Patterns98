
#include <stdio.h>

int main() {
    // Write C code here
    int i,j,k,n;
    scanf("%d",&n);
    for(i=1;i<n;i++)
    {
        for(j=1;j<=2*n+1;j++)
        {
            if(i==1)
            {
            if(j<=n||j>n+1)
            {
                printf("*");
            }
            else
            {
                printf(" ");
            }
            }
            else
            {
                if(j==n||j==n+2)
                {
                    printf("*");
                }
                else
                {
                    printf(" ");
                }
            }
        }
        printf("\n");
    }
    for(i=1;i<=1;i++)
    {
        for(j=1;j<=2*n+1;j++)
        {
            if(j>n/2+1&&j<(2*n+1)-(n/2))
            {
                printf("*");
            }
            else
            {
                printf(" ");
            }
        }
    }
    for(i=1;i<=n;i++)
    {
        for(j=1;j<=n+1;j++)
        {
            if(j==n+1)
            {
                printf("*");
            }
            else
            {
                printf(" ");
            }
        }
        printf("\n");
    }
    
    return 0;
}
