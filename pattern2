
#include <stdio.h>

int main() {
    
    int i,j,k,n;
    scanf("%d",&n);
    for(i=1;i<=n;i++)
    {
        for(j=1;j<=i;j++)
        {
            for(k=1;k<=n+1;k++)
            {
               if(k==n+1)
               {
                   printf("*");
               }
               else
               {
                   printf(" ");
               }
            }
            
            printf("\n");
        }
        for(j=1;j<=1;j++)
        {
            for(k=n;k>i;k--)
            {
                printf(" ");
            }
            for(k=1;k<=2*i+1;k++)
            {
                printf("*");
            }
        }
        printf("\n");
    }
    
    return 0;
}
